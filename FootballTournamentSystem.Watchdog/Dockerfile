#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:3.1 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:3.1 AS build
WORKDIR /src
COPY ["FootballTournamentSystem.Watchdog/FootballTournamentSystem.Watchdog.csproj", "FootballTournamentSystem.Watchdog/"]
RUN dotnet restore "FootballTournamentSystem.Watchdog/FootballTournamentSystem.Watchdog.csproj"
COPY . .
WORKDIR "/src/FootballTournamentSystem.Watchdog"
RUN dotnet build "FootballTournamentSystem.Watchdog.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "FootballTournamentSystem.Watchdog.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "FootballTournamentSystem.Watchdog.dll"]